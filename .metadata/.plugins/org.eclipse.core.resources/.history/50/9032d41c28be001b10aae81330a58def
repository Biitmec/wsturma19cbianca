package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		/*
		 * Capturem separamdamente dia mes e ano
		 * Para o dia somente será aceito a qtde de dias de acordo com o mes
		 * (fev - 29 dias)
		 * Para o mês aceite somente valores entre 1 e 12
		 * Para o ano aceite somente valores entre 2003 e 1920
		 * no final exibir a data completa
		 */

		int dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o Dia"));
		int mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o Mês"));
		int ano = Integer.parseInt(JOptionPane.showInputDialog("Digite o Ano"));

		while(mes<1 && mes>12) {

			mes = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Mes"));

		}
		while (ano<1920 && ano>2003) {
			ano = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Ano"));
		}
		if (mes==2);{
			while (dia<1 && dia>29) {
				dia = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o dia"));
			}
		}
		else if (mes==4 | mes==6 | mes==9 | mes==11){
			while (dia<1 && dia>30) {
			
				dia = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Dia"));
		}else {
				while (dia<1 && dia>31) }
					dia = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Dia"));
				}
	}
				while(mes<1 && mes>12) {

					mes = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Mes"));

				}
				while (ano<1920 && ano>2003) {
					ano = Integer.parseInt(JOptionPane.showInputDialog("Digite novamente o Ano"));
				}
				System.out.println("Data validada: " + dia / mes / ano);
			}
		}
	}
}





